# Staging Environment Configuration
VITE_APP_ENV=staging
VITE_APP_NAME=BabySim (Staging)
VITE_APP_VERSION=staging-latest

# API Configuration
VITE_API_BASE_URL=https://api-staging.babysim.fun
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Build Optimization (Less aggressive for debugging)
VITE_SOURCEMAP=true
VITE_MINIFY=false
VITE_TREE_SHAKE=true

# Monitoring
VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project
VITE_SENTRY_ENVIRONMENT=staging
VITE_SENTRY_RELEASE=staging-latest
VITE_ANALYTICS_ID=GA-STAGING-ID
VITE_LOGROCKET_APP_ID=your-staging-logrocket-app-id

# Security
VITE_CSP_NONCE_ENABLED=true
VITE_ENABLE_STRICT_MODE=true